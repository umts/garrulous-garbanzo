%h1.title Edit assignment
= form_for @assignment, url: rotation_assignment_url(@rotation, @assignment) do |f|
  = f.label :start_date
  = f.text_field :start_date, class: 'datepicker'
  = f.label :end_date
  = f.text_field :end_date, class: 'datepicker'
  = f.label :user_id
  = f.select :user_id, @users.pluck(:last_name, :id)
  = f.submit 'Save'

= button_to 'Delete assignment', rotation_assignment_path(@rotation, @assignment), method: :delete
