%h1.title Edit assignment
= form_for @assignment, url: roster_assignment_url(@roster, @assignment) do |f|
  %div.container-fluid
    %div.row
      %div.col-xs-3
      %div.col-xs-2
        %div.form-group
          = f.label :user_id
          = f.select :user_id, @users.pluck(:last_name, :id), class: 'form-control'
      %div.col-xs-4
        %div.form-group
          = f.label :start_date
          = f.text_field :start_date, class: 'datepicker form-control'
        %div.form-group
          = f.label :end_date
          = f.text_field :end_date, class: 'datepicker form-control'
  %div.center
    = f.submit 'Save', class: 'btn btn-primary'
    = button_to 'Delete assignment', roster_assignment_path(@roster, @assignment),
      method: :delete, class: 'btn btn-danger'
