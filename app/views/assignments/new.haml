%h1.title New assignment
= form_for Assignment.new, url: roster_assignments_path(@roster) do |f|
  %div.container-fluid
    %div.row
      %div.col-xs-3
      %div.col-xs-2
        %div.form-group
          = f.label :user_id
          = f.select :user_id, @users.pluck(:last_name, :id), class: 'form-control'
      %div.col-xs-4
        %div.form-group
          = f.label :start_date
          = f.text_field :start_date, value: @start_date, class: 'datepicker form-control'
        %div.form-group
          = f.label :end_date
          = f.text_field :end_date, value: @end_date, class: 'datepicker form-control'
      = f.hidden_field :roster_id, value: @roster.id
    %div.center
      = f.submit 'Create', class: 'btn btn-primary'