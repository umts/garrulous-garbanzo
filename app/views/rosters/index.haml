%h1.title Rosters

%table.table
  %thead
    %tr
      %th Name
      %th Fallback
      %th
      %th
      %th
  %tbody
    - @rosters.each do |roster|
      %tr
        %td= roster.name
        %td
          - if roster.fallback_user.present?
            = roster.fallback_user.last_name
          - else
            No fallback user!
        - if @current_user.admin_in? roster
          %td= link_to 'Set Twilio Number', setup_roster_path(roster)
          %td= link_to 'Edit', edit_roster_url(roster), class: 'btn btn-info'
          %td= button_to 'Destroy', roster_path(roster), method: :delete,
            class: 'btn btn-danger'
.text-center.pad-bottom
  = link_to 'New roster', new_roster_path, class: 'btn btn-primary'

