%h1 Edit roster

= form_for @roster do |f|
  .mb-3
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .mb-3
    = f.label :phone
    = f.phone_field :phone, class: 'form-control'
  .mb-3
    = f.label :fallback_user
    = f.collection_select :fallback_user_id, @users, :id, :last_name,
      { include_blank: true }, class: 'form-control custom-select'
  .mb-3
    = f.label :switchover_time
    = f.time_field :switchover_time, class: 'form-control',
                   value: @roster.switchover_time.to_fs(:time), required: true
  = f.submit 'Save', class: 'btn btn-primary'
